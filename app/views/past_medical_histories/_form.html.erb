<div class="container-main col-sm-12 col-md-12 col-lg-12">
  <div class="container-main-content col-sm-12 col-md-12 col-lg-12">
  <div class="wrapper-bg-form col-md-6 col-md-offset-3">
    <%= form_for(@past_medical_history) do |f| %>

    <% if @past_medical_history.errors.any? %>
      <div id= "error_explanation">
        <h2 class= "text-danger"><%= @past_medical_history.errors.count %> errors have been detected</h2>
        <ul>
          <% @past_medical_history.errors.full_messages.each do |msg| %>
            <li class= "text-danger"><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <span class="badge badge-primary">Your past medical history info</span>
      <div class="blockquote ">

        <div class= "form-group" >
          <%= f.label :icd_code %>
          <div class="items_arrange">
            <%= f.text_field :icd_code, class:"form-control", placeholder:"Name" %>
          </div>
        </div>

        <%= f.hidden_field :background_id %>
        <div class= "form-group" >
          <%= f.label :brain_disease_in_the_past,"Have you ever had brain disease in the past?", {class: 'form-label'} %>
          <div class="items_arrange">
            <%= f.radio_button :brain_disease_in_the_past, true %> Yes
            <%= f.radio_button :brain_disease_in_the_past, false, {} %> No
          </div>
        </div>

        <%= f.hidden_field :background_id %>
        <div class= "form-group" >
          <%= f.label :heart_disease_in_the_past,"Have you ever had heart disease in the past?", {class: 'form-label'} %>
          <div class="items_arrange">
            <%= f.radio_button :heart_disease_in_the_past, true %> Yes
            <%= f.radio_button :heart_disease_in_the_past, false, {} %> No
          </div>
        </div>

        <%= f.hidden_field :background_id %>
        <div class= "form-group" >
          <%= f.label :surgery_in_the_past,"Have you ever had surgery in the past?", {class: 'form-label'} %>
          <div class="items_arrange">
            <%= f.radio_button :surgery_in_the_past, true %> Yes
            <%= f.radio_button :surgery_in_the_past, false, {} %> No
          </div>
        </div>

        <%= f.hidden_field :background_id %>
        <div class= "form-group" >
          <%= f.label :hospitalized_in_the_past,"Have you ever been hospitalized in the past?", {class: 'form-label'} %>
          <div class="items_arrange">
            <%= f.radio_button :hospitalized_in_the_past, true %> Yes
            <%= f.radio_button :hospitalized_in_the_past, false, {} %> No
          </div>
        </div>

        <%= f.hidden_field :background_id %>
        <div class= "form-group" >
          <%= f.label :attending_to_a_hospital_now,"Are you attending to a hospital now?", {class: 'form-label'} %>
          <div class="items_arrange">
            <%= f.radio_button :attending_to_a_hospital_now, true %> Yes
            <%= f.radio_button :attending_to_a_hospital_now, false, {} %> No
          </div>
        </div>

      </div>

        <div class="wrapper-bg-form-submit">
          <%= link_to "Back to your past_medical_history info", backgrounds_path, class:"btn btn-neutral" %>
          <%= f.submit 'Register', class: 'btn btn-primary' %>
        </div>

        <% end %>

      </div>
  </div>
  </div>
</div>
