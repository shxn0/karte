<%= form_for([background, allergy], remote: true) do |f| %>
  <% if allergy.errors.any? %>
  <div id= "error_explanation" >
    <h2> <%= allergy.errors.count %>件のエラーがあります</h2>
    <ul>
      <%= allergy.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.hidden_field :background_id %>
  <div class= "form-group" >
    <div class="items_arrange">
      <%= f.text_field :allergy_name, class:"form-control", placeholder:"Please type allergy Names" %>
    </div>
  </div>

  <div class="wrapper-bg-form-submit">
    <%= f.submit 'Add', class: 'btn btn-primary' %>
  </div>

<% end %>
